<div class="container">
	<div class="row">
		<div class="col-xs-12 public orders_confirm">
			<h2 class="section-top">注文情報確認</h2>
			<table class="confirm_cart_items table table-bordered">
				<thead>
					<tr>
						<th colspan="2">商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @cart_items.each do |cart_item| %>
						<% item = cart_item.item %>
						<tr>
							<td>
								<%= attachment_image_tag item,:image,:fill, 50, 50, format: "jpeg", fallback: "no-image.png", size:"50x50" ,class: "cart_item_image" %>
							</td>
							<td><%= item.name %></td>
							<td><%= item.with_tax_price %>円</td>
							<td><%= cart_item.amount %></td>
							<td><%= cart_item.subtotal %>円</td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<table class="confirm_prices table table-bordered">
				<thead>
					<tr>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>送料</td>
						<td>¥800</td>
					</tr>
					<tr>
						<td>商品合計</td>
						<td>￥<%= @cart_items.sum(&:subtotal) %></td>
					</tr>
					<tr>
						<td>総計</td>
						<td class="bold">￥<%= 800 + @cart_items.sum(&:subtotal) %></td>
					</tr>
				</tbody>
			</table>
		</div>
		<%= form_for(@order, url: orders_path) do |f| %>
			<div class="field">
				<%= f.label :payment_method, "支払い方法" %>
				<p><%= @order.payment_method_i18n %></p>
				<%= f.hidden_field :payment_method, value: @order.payment_method %>
			</div>
			<div class="field">
				<label>お届け先</label>
				<p>〒<%= @order.postal_code %> <%= @order.destination %><br><%= @order.name %></p>
				<%= f.hidden_field :postal_code, value: @order.postal_code %>
				<%= f.hidden_field :destination, value: @order.destination %>
				<%= f.hidden_field :name, value: @order.name %>
			</div>
			<div class="text-center">
				<%= f.submit "注文を確定する", class: "btn btn-primary submit_to_create_order" %>
			</div>
		<% end %>
	</div>
</div>

