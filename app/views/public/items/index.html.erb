<div class="container">
	<div class="row">
	  <div class="col-xs-12 public items_index">
			<h2 class="section-top">ジャンル一覧</h2>
			  <% @genres.each do |genre| %>
				  <%= link_to genre.name, items_path(genre_id: genre.id) %>
			  <% end %>
		</div>
  </div>
	<div class="row">
	  <div class="col-xs-12 public items_index">
			<% if params[:genre_id] %>
				<h2 class="section-top"><%= @genre.name %>の商品一覧 (全<%= @all_items_count %>件)</h2>
			<% else %>
				<h2 class="section-top">商品一覧 (全<%= @all_items_count %>件)</h2>
			<% end %>
			<% if @items.first %>
				<% @items.each do |item| %>
					<%= link_to item_path(item) do %>
						<div class="col-xs-3 public items_index">
							<%= attachment_image_tag item, :image, :fill, 200, 200, format: "jpeg", size:"200x200", fallback: "no-image.png" %>
							<h5><%= item.genre.name %></h5>
							<p><%= item.name %></p>
							<p>
								<%= item.with_tax_price %>円 
								<% if item.is_active? %>
									<span class="text-active">販売中</span>
								<% else %>
									<span class="text-invalid">販売停止中</span>
								<% end %>
							</p>
						</div>
					<% end %>
				<% end %>
				<%= paginate @items %>
			<% else %>
				<h3>対応する商品はありませんでした。</h3>
			<% end %>
		</div>
	</div>
</div>