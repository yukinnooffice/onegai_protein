<div class="container">
  	<div class="row item-info">
		<h3>PRODUCTS LINEUP</h3>
		<p>商品ラインナップ</p>
	</div>
	<div class="f-container">
		<% @genres.each do |genre| %>
		    <%= link_to items_path(genre_id: genre.id) do %>
				<div class="btn-border"><%= genre.name%></div>
			<% end %>
		<% end %>
	</div>
	<div class="row">
	  <div class="col-xs-12 public items_index">

			<% if params[:genre_id] %>
				<h2 class="section-top"><%= @genre.name %> (<%= @all_items_count %>)</h2>
			<% else %>
				<h2 class="section-top">Item List (<%= @all_items_count %>)</h2>
			<% end %>
			<% if @items.first %>
			<div class="box-list">
				<% @items.each do |item| %>
					<%= link_to item_path(item) do %>
						<div class="list public items_index">
							<%= attachment_image_tag item, :image, :fill, 200, 200, format: "jpeg", size:"200x200", fallback: "no-image.png" %>
							<h5><%= item.genre.name %></h5>
							<p><%= item.name %></p>
							<p>
								<%= item.with_tax_price %>円 
								<% if item.is_active? %>
									<span class="text-active">販売中</span>
								<% else %>
									<span class="text-invalid">販売停止中</span>
								<% end %>
							</p>
						</div>
					<% end %>
				<% end %>
			<% else %>
				<h3>対応する商品はありませんでした。</h3>
			<% end %>
		</div>
		<%= paginate @items %>
		</div>
	</div>
</div>
</div>
