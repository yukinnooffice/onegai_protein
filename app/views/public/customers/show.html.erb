<div class="container">
	<h2 class="section-top"><span class="fas fa-dumbbell" aria-hidden="true"></span> マイページ</h2>
	<h3>登録情報</h3>
	<table class="customer_info table table-bordered">
		<thead>
			<th></th>
			<th></th>
			<th></th>
		</thead>
		<tbody>
			<tr>
				<td>名前</td>
				<td>(姓) <%= @customer.first_name %></td>
				<td>(名) <%= @customer.last_name %></td>
			</tr>
			<tr>
				<td>フリガナ</td>
				<td>(セイ) <%= @customer.first_name_kana %></td>
				<td>(メイ) <%= @customer.last_name_kana %></td>
			</tr>
			<tr>
				<td>メールアドレス</td>
				<td colspan="2"><%= @customer.email %></td>
			</tr>
			<tr>
				<td>郵便番号</td>
				<td colspan="2"><%= @customer.postal_code %></td>
			</tr>
			<tr>
				<td>住所</td>
				<td colspan="2"><%= @customer.address %></td>
			</tr>
			<tr>
				<td>電話番号</td>
				<td colspan="2"><%= @customer.telephone_number %></td>
			</tr>
		</tbody>
	</table>
	<div class="col-xs-4">
		<%= link_to "登録情報を編集する", edit_information_path, class: "btn btn-sm btn-hachiss" %>
	</div>
	<div class="col-xs-4">
		<%= link_to "配送先一覧", addresses_path, class: "btn btn-sm btn-drk" %>
	</div>
	<div class="col-xs-4">
		<%= link_to "注文履歴一覧", orders_path, class: "btn btn-sm btn-blm" %>
	</div>
</div>