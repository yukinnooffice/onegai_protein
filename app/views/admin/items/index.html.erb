<div class="container">
  <div class="row">
  	<div class="col-xs-12 admins customers_index">
	  	<% if params[:genre_id] %>
				<h2 class="section-top"><span class="fas fa-dumbbell" aria-hidden="true"></span> <%= @genre.name %>の商品一覧 (全<%= @all_items_count %>件)</h2>
			<% else %>
				<h2 class="section-top"><span class="fas fa-dumbbell" aria-hidden="true"></span> 商品一覧 (全<%= @all_items_count %>件)</h2>
			<% end %>
			<div class="item_add_btn">
				<%= link_to "商品追加+", new_admin_item_path, class: "btn btn-sm btn-hachiss"
 %>
			</div>
			<% if @items&.first %>
				<%= render 'admin/items/index', items: @items %>
				<div class="paginate"><%= paginate @items %></div>
			<% else %>
				<h3>対応する商品はありませんでした。</h3>
			<% end %>
		</div>
	</div>
</div>
