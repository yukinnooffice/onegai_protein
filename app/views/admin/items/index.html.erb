<div class="container">
  <div class="row">
  	<div class="col-xs-12 admins customers_index">
	  	<% if params[:genre_id] %>
				<h2 class="section-top"><%= @genre.name %>の商品一覧 (全<%= @all_items_count %>件)</h2>
			<% else %>
				<h2 class="section-top">商品一覧 (全<%= @all_items_count %>件)</h2>
			<% end %>
			<h3 class="text-left">
				<%= link_to "商品追加+", new_admin_item_path, class: "new_admin_item" %>
			</h3>
			<% if @items&.first %>
				<%= render 'admin/items/index', items: @items %>
				<%= paginate @items %>
			<% else %>
				<h3>対応する商品はありませんでした。</h3>
			<% end %>
		</div>
	</div>
</div>
