<div class="wrapper">

			<h2 class="section-top">ジャンル登録</h2>
  	<%= render 'form', genre: @genre, url: admin_genres_path, submit: '登録' %>

		<div class="mb3">
			<h3>ジャンル一覧</h3>
			<table class="genre_info table table-bordered">
				<thead>
					<tr>
						<th>ジャンル名</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td><%= link_to genre.name, admin_items_path(genre_id: genre.id), class: "underline" %></td>
							<td>
								<% if genre.is_active? %>
									<span class="text-active">有効</span>
								<% else %>
									<span class="text-invalid">無効</span>
								<% end %>
							</td>
							<td class="text-center"><%= link_to "編集", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
						</tr>
					<% end %>
				</tbody>
			</table>

</div>
</div>
